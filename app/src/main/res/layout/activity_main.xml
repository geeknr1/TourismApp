<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/vacationtime"
    tools:context=".activities.MainActivity">


    <TextView
        android:id="@+id/tv_hello"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="25sp"
        android:text="@string/hello_world" />

    <TextView
        android:id="@+id/choose_destination"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingTop="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/choose_dest"
        />

    <Spinner
        android:background="#ADD8E6"
        android:id="@+id/spinnerFrance"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"/>

    <Spinner
        android:background="#ADD8E6"
        android:id="@+id/spinnerSwitzerland"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"/>

    <Spinner
        android:background="#ADD8E6"
        android:id="@+id/spinnerItaly"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"/>

    <Spinner
        android:background="#ADD8E6"
        android:id="@+id/spinnerAustria"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"/>

</LinearLayout>