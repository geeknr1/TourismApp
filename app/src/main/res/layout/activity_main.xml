<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/vacationtime"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:id="@+id/mainPage"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="16dp">


    <TextView
        android:id="@+id/tv_hello"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="25sp"
        android:text="@string/hello_world" />

    <TextView
        android:id="@+id/choose_destination"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingTop="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/choose_dest"
        />

    <Spinner
        android:background="#ADD8E6"
        android:id="@+id/spinnerFrance"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        />

    <Spinner
        android:background="#ADD8E6"
        android:id="@+id/spinnerSwitzerland"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"/>

    <Spinner
        android:background="#ADD8E6"
        android:id="@+id/spinnerItaly"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"/>

    <Spinner
        android:background="#ADD8E6"
        android:id="@+id/spinnerAustria"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"/>

        <Spinner
            android:background="#ADD8E6"
            android:id="@+id/spinnerIreland"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"/>

        <Spinner
            android:background="#ADD8E6"
            android:id="@+id/spinnerUK"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"/>

        <Spinner
            android:background="#ADD8E6"
            android:id="@+id/spinnerNorway"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"/>

        <Spinner
            android:background="#ADD8E6"
            android:id="@+id/spinnerSweden"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"/>

        <Spinner
            android:background="#ADD8E6"
            android:id="@+id/spinnerFinland"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"/>

        <Spinner
            android:background="#ADD8E6"
            android:id="@+id/spinnerIceland"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"/>

        <Spinner
            android:background="#ADD8E6"
            android:id="@+id/spinnerSpain"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"/>

        <Spinner
            android:background="#ADD8E6"
            android:id="@+id/spinnerAndorra"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"/>

        <Spinner
            android:background="#ADD8E6"
            android:id="@+id/spinnerRomania"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"/>

        <Spinner
            android:background="#ADD8E6"
            android:id="@+id/spinnerBulgaria"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"/>

        <Spinner
            android:background="#ADD8E6"
            android:id="@+id/spinnerNorthMacedonia"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"/>

        <Spinner
            android:background="#ADD8E6"
            android:id="@+id/spinnerGreece"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

</ScrollView>